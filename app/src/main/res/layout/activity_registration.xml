<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.RegistrationActivity" android:background="@android:color/white">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_green_form" android:id="@+id/imageView5"
            android:layout_alignParentEnd="true" android:alpha=".2" android:layout_below="@+id/top"
            android:layout_marginEnd="20dp" android:layout_marginTop="20dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/top">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_left_black_24dp"
                android:id="@+id/iv_back" android:padding="10dp"/>
        <TextView
                android:text="Registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_centerInParent="true"
                android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp" android:id="@+id/view" android:layout_alignParentBottom="true"
                android:background="@color/colorDivider"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/top">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="25dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="bottom">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/ic_profile" android:id="@+id/imageView"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@drawable/ic_upload"
                        android:id="@+id/imageView3" android:padding="10dp" android:layout_marginBottom="2dp"
                        android:layout_marginLeft="-75dp"/>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_student_name" android:hint="Student name"
                    android:background="@drawable/bg_edit_text"
                    android:padding="10dp" android:textColor="@color/colorText" android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_dob" android:padding="10dp"
                    android:background="@drawable/bg_edit_text" android:layout_marginTop="10dp"
                    android:hint="Date of Birth"
                    android:textColor="@color/colorText"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_gender" android:padding="10dp"
                    android:background="@drawable/bg_edit_text" android:layout_marginTop="10dp"
                    android:hint="Gender"
                    android:textColor="@color/colorText"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_blood_group" android:hint="Blood group"
                    android:background="@drawable/bg_edit_text"
                    android:padding="10dp" android:textColor="@color/colorText" android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_contact_number" android:hint="Contact number"
                    android:background="@drawable/bg_edit_text" android:padding="10dp"
                    android:textColor="@color/colorText"
                    android:textSize="14sp" android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_father_name" android:hint="Father's name"
                    android:background="@drawable/bg_edit_text"
                    android:padding="10dp" android:textColor="@color/colorText" android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_mother_name" android:hint="Mother's name"
                    android:background="@drawable/bg_edit_text"
                    android:padding="10dp" android:textColor="@color/colorText" android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_address" android:hint="Address" android:background="@drawable/bg_edit_text"
                    android:padding="10dp" android:textColor="@color/colorText" android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            <Button
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_done" android:layout_marginTop="10dp"
                    android:textColor="@android:color/white" android:background="#1CB650"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>