<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp" android:gravity="center_vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:id="@+id/view2" android:layout_alignParentBottom="true"
            android:background="@color/colorDivider"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="20dp">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent" android:src="@drawable/ic_profile" android:id="@+id/iv_student"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginStart="15dp">
            <TextView
                    android:text="name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_name" android:layout_weight="1"
                    android:gravity="center_vertical"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_contact" android:text="contact"
                    android:layout_weight="1" android:gravity="center_vertical"/>
            <TextView
                    android:text="blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_blood" android:layout_weight="1"
                    android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>