<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.AdminLoginActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/ic_green_lock" android:id="@+id/imageView2"
            android:alpha=".1" android:layout_marginEnd="-300dp"/>
    <TextView
            android:text="Admin Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="35sp"
            android:fontFamily="sans-serif-light" android:layout_below="@+id/imageView4"
            android:layout_marginTop="100dp" android:gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="25dp" android:layout_centerInParent="true"
    >
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_email" android:hint="Admin email (admin@admin.com)" android:text="admin@admin.com"
                android:background="@drawable/bg_edit_text" android:padding="10dp" android:textSize="14sp"
                android:textColor="@color/colorText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/et_password" android:hint="Password (123456)" android:text="123456"
                android:background="@drawable/bg_edit_text" android:padding="10dp" android:textSize="14sp"
                android:layout_marginTop="10dp" android:textColor="@color/colorText"/>
        <Button
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_login" android:background="#4CAF50"
                android:textColor="@android:color/white" android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>