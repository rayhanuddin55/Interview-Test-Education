<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.StudentRegistrationActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_student_name" android:hint="Student name"/>
    <TextView
            android:text="Date of Birth"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/tv_dob"/>
    <TextView
            android:text="Gender"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/tv_gender"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_blood_group" android:hint="Blood group"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_contact_number" android:hint="Contact number"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_father_name" android:hint="father's name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_mother_name" android:hint="Mother's name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_address" android:hint="Address"/>
    <Button
            android:text="Done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_done"/>
</LinearLayout>